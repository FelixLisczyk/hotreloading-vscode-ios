// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "options": {
    "env": {
      "XCODE_BUILD_COMMAND": "xcodebuild -scheme Demo -configuration Debug -sdk ${command:ios-debug.targetSdk} -derivedDataPath ${workspaceFolder}/.build-xcode -allowProvisioningUpdates"
    }
  },
  "tasks": [
    {
      "label": "xcodegen",
      "type": "process",
      "command": "xcodegen"
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "${XCODE_BUILD_COMMAND} build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["xcodegen"]
    },
    {
      "label": "Clean & Build",
      "type": "shell",
      "command": "${XCODE_BUILD_COMMAND} clean build",
      "dependsOn": ["xcodegen"]
    }
  ]
}
